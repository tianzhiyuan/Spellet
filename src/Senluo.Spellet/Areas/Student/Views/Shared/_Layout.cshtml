<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="shortcut icon" href="/content/Image/student.ico">
    <title>Spellet-@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/Css/g.css" />
    <link rel="stylesheet" href="~/Content/Css/Student/global.css" />
    <link rel="stylesheet" href="~/Content/Library/webpopover/jquery.webui-popover.min.css" />
    @RenderSection("css", false)
    <script type="text/javascript" src="~/Content/Library/jquery/jquery-2.0.1.min.js"></script>
    <script type="text/javascript" src="~/Content/Library/webpopover/jquery.webui-popover.js"></script>
    <script type="text/javascript" src="~/Content/Scripts/common.js"></script>
    @RenderSection("script", false)
</head>
<body>
    <div class="center">
        <div class="bg">
            <div class="banner"></div>
            <a href="~/student/home" class="head">
                <img src="~/Content/Image/Student/images/head.png" /></a>
            <div class="logo"></div>
            @RenderBody()
            <div class="bg-left"></div>
            <div class="bg-right"></div>
        </div>
    </div>
    <span class="cm_bg"></span>
    @{
        string CurrentAction = ViewContext.RouteData.Values["action"].ToString().ToLower();
        string CurrentController = ViewContext.RouteData.Values["controller"].ToString().ToLower();
        if (CurrentAction == "index" && CurrentController == "home")
        {

        }
        else
        {
            <div class="driver" id="__right_nav__">
                <a class="whale" href="javascript:void(0);" title="打开/关闭"> </a>
                <a href="~/student/course/today" class="nav-cloud">今日课程</a>
                <a href="~/student/course/history" class="nav-cloud">历史课程</a>
                <a href="~/student/test/self" class="nav-cloud">自测</a>
                <a href="~/student/test" class="nav-cloud">考试</a>
                <a href="javascript:;" class="top" style="height: 68px;"></a>
            </div>
        }
    }
<script type="text/javascript">
    $(function() {
        $('#__right_nav__').click(function() {
            var obj = $('#__right_nav__');
            if (obj.hasClass('driver')) {
                obj.removeClass('driver').addClass('driver-closed');
            } else {
                obj.removeClass('driver-closed').addClass('driver');
            }
        })
    })
</script>
</body>
</html>
